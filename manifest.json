{
  "manifest_version": 2,

  "name": "JS Injector",
  "description": "Inject javascript to the webpage you visit",
  "version": "1.0",

  "browser_action": {
  "default_icon":
    {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
   "default_title": "Javascript Injector",
   "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
   "activeTab",
   "storage",
   "tabs",
   "activeTab",
   "http://*/",
   "https://*/"
   ]
}
